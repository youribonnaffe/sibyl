 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal">

<ViewFlipper android:id="@+id/easter_egg_vf" 
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:gravity="center_vertical"
      >
      
     <TextView android:id="@+id/easter_egg1"
        android:text="@string/easter_egg_text1"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         />
     <TextView android:id="@+id/easter_egg2"
        android:text="@string/easter_egg_text2"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         />
     <TextView android:id="@+id/easter_egg3"
        android:text="@string/easter_egg_text3"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         />
 </ViewFlipper>
</LinearLayout>