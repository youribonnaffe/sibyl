<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	
	<ListView android:id="@+id/listConfigMode"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"/>		
		
	<Spinner android:id="@+id/repMusic"
		android:focusable="false"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:visibility="gone"
		android:text="Normal"/>

    <Spinner android:id="@+id/shuMusic"
		android:focusable="false"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:visibility="gone"
		android:text="Normal"/>
		
	<ListView android:id="@+id/listCoverAnim"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>      
        
    <Spinner android:id="@+id/covAnims"
        android:focusable="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:text="Normal"/>
		
	<View 
		android:layout_width="fill_parent"
		android:layout_height="10dp" /> 		
		
	<ListView android:id="@+id/listConfigLibrary"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"/>
 
	    <EditText android:id="@+id/musicData" 
			android:maxLines="5" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:focusable="false"
			android:scrollHorizontally="true"
			android:visibility="gone"/>
		 
		<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content">
		    
		    <TableRow
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:gravity="center">
				
				<Button android:id="@+id/addMusic"
					android:text="@string/config_add_folder"
					android:focusable="true"
			    	android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:visibility="gone"/>
				<Button android:id="@+id/updateMusic"
					android:text="@string/config_update"
					android:focusable="false"
			    	android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:visibility="gone"/>
				<Button android:id="@+id/delMusic"
					android:text="@string/config_del_folder"
					android:focusable="true"
			    	android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:visibility="gone"/>
				    
			</TableRow>
		</TableLayout>
		
	<View 
		android:layout_width="fill_parent"
		android:layout_height="10dp" />
		
	<Button android:id="@+id/coverUI"
		android:text="@string/button_cover_manager" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="left" />
</LinearLayout>