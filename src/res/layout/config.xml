<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

	<TextView android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
	       	android:text="Library folders :"
            android:textSize="10pt"
        	/>

	<EditText android:id="@+id/musicData" 
		android:maxLines="5" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:focusable="false"
		android:scrollHorizontally="true"/>
		
	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    
	    <TableRow
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center">
			
			<Button android:id="@+id/addMusic"
				android:text="Add folder"
				android:focusable="true"
		    	android:layout_width="fill_parent"
			    android:layout_height="wrap_content"/>
			<Button android:id="@+id/updateMusic"
				android:text="Update library"
				android:focusable="false"
		    	android:layout_width="fill_parent"
			    android:layout_height="wrap_content"/>
			<Button android:id="@+id/delMusic"
				android:text="Delete folder"
				android:focusable="true"
		    	android:layout_width="fill_parent"
			    android:layout_height="wrap_content"/>
		</TableRow>
		
		<TableRow
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content">
		
			<TextView android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
		       	android:text="Play mode : "
	            android:textSize="9pt"
	        	/>
	        <TextView android:id="@+id/repMode"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
		       	android:text="Library folders :"
	            android:textSize="9pt"
	        	/>
        </TableRow>
		
		<TableRow
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center">
		    
			<Button android:id="@+id/repMusicNo"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="No Repeat"/>
			
			<Button android:id="@+id/repMusicOne"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Repeat Song"/>
			
			<Button android:id="@+id/repMusicAll"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Repeat All"/>
		</TableRow>
	</TableLayout>
	
</LinearLayout>